---
import { SITE } from "src/config";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
---

<Layout title={`Tags | ${SITE.title}`}>
  <Header />

  <Main pageTitle="Sunlight Tracker" pageDesc="Sunlight Tracker will always deliver you with the latest sun phases & its position">
    <div>
      <img src="/assets/Sunlight-Tracker.png" class="sm:w-1/2 mx-auto rounded-xl" alt="Sunlight Tracker application icon">
    </div>
  </Main>

  <Footer />
</Layout>
